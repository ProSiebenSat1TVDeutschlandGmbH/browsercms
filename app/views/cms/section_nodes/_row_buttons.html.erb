<div class="btn-toolbar pull-right" role="toolbar">
  <div class="btn-group">
    <%= link_to engine_aware_path(section_node.node), class: 'btn btn-xs btn-default add-link' do %>
      <span class="glyphicon glyphicon-eye-open"></span>
    <% end unless section_node.root? %>
    <%= link_to edit_engine_aware_path(section_node.node), class: 'btn btn-xs btn-default add-link' do %>
      <span class="glyphicon glyphicon-pencil"></span>
    <% end %>
    <%= link_to engine_aware_path(section_node.node), class: 'btn btn-xs btn-default add-link http_delete confirm_with_title', title: "Are you sure you want to remove #{section_node.node.name}?" do %>
      <span class="glyphicon glyphicon-remove"></span>
    <% end if section_node.deletable? %>
  </div>
</div>
